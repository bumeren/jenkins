pipeline {
   agent any 
   stages {
      stage('check access site') {
         steps {
             sh 'curl -Iv https://court.gov.ua'
         }
      }
    }
   post {
      always {
         echo "RUN STEPS"
      }
     
      success {
         echo "SCRIPT SUCCESS"
      }
      
      failure {
         echo "WHEN SCRIPT FAILURE"
      }
      
      unstable {
         echo "WHEN SCRIPT UNSTABLE"
      }
}
