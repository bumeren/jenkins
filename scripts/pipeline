pipeline {
   agent any 
   stages {
      stage('check access site') {
         steps {
             sh 'echo "HELLO WORLD"'
         }
      }
    }
   post {
      always {
         echo "RUN STEPS"
      }
     
      success {
         echo "SCRIPT SUCCESS"
      }
      
      failure {
         echo "WHEN SCRIPT FAILURE"
      }
      
      unstable {
         echo "WHEN SCRIPT UNSTABLE"
      }
      abort {
         echo "SCRIPT ABORTED by admin"
    }
}
