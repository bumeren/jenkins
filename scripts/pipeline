pipeline {
   agent any 
   stages {
      stage('check access site') {
         steps {
             sh 'curl https://court.gov.ua'
         }
      }
      stage('output greeting') {
         steps {
             sh "echo 'Hello World'"
         }
      }
    }
   post {
      always {
         echo "RUN STEPS"
      }
     
      success {
         echo "SCRIPT SUCCESS"
      }
      
      failure {
         echo "WHEN SCRIPT FAILURE"
      }
      
      unstable {
         echo "WHEN SCRIPT UNSTABLE"
      }
      aborted {
         echo "SCRIPT ABORTED by admin"
      }
   }
}
